{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ES6",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "jquery",
      "tampermonkey",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/libs/twitter/**/*.js",
  ]
}